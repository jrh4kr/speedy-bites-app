# ============================================
# FRONTEND ENVIRONMENT VARIABLES (VITE_*)
# ============================================
VITE_API_URL=http://localhost:4000/api
VITE_UPLOAD_URL=http://localhost:4000/uploads

# ============================================
# BACKEND DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/speedy_bites
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_SSL=false

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# ============================================
# IMAGE UPLOAD CONFIGURATION
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
IMAGE_OPTIMIZATION_QUALITY=80
IMAGE_OPTIMIZATION_ENABLED=true

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:8081,https://yourdomain.com
CORS_CREDENTIALS=true

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
TOKEN_SECRET=your-secret-key-min-32-chars-change-in-production
TOKEN_EXPIRY=24h
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=15m

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT_MAX=10

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_DIR=./logs

# ============================================
# SECURITY HEADERS
# ============================================
HELMET_ENABLED=true
REQUIRE_HTTPS=false

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_IMAGE_UPLOAD=true
FEATURE_PRODUCT_VARIANTS=false
FEATURE_INVENTORY_TRACKING=false
